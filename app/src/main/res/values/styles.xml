<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.light" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seagreen</item>
        <item name="colorPrimaryDark">@color/seagreen</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.drak" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seagreen</item>
        <item name="colorPrimaryDark">@color/seagreen</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>
