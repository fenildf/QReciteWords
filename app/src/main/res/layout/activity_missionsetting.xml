<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tzy.qrecitewords.widget.rsv.RangeSliderView
        android:id="@+id/rsv_large"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:filledColor="@color/seagreen"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rsv_large"
        android:layout_alignLeft="@+id/rsv_large"
        android:layout_alignRight="@+id/rsv_large"
        >

        <TextView
            android:text="60"
            android:textColor="@color/seagreen"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            />

        <TextView
            android:text="100"
            android:textColor="@color/seagreen"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            />

        <TextView
            android:text="140"
            android:textColor="@color/seagreen"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            />

        <TextView
            android:text="180"
            android:textColor="@color/seagreen"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            />

        <TextView
            android:text="240"
            android:textColor="@color/seagreen"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:text="滑动，调整每日要背诵的单词的数量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_below="@id/rsv_large"
        android:layout_alignLeft="@id/rsv_large"
        android:layout_marginLeft="30dp"
        />

</RelativeLayout>