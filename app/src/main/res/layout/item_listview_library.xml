<?xml version="1.0" encoding="utf-8"?>
<tzy.qrecitewords.widget.CheckableLibraryItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    cardview:cardElevation="2dp"
    cardview:cardCornerRadius="2dp"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:duplicateParentState="true"
    >
    <TextView
        android:id="@+id/textView_libraryName"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="四级词库"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:textColor="@drawable/selector_library_text_item"
        />

    <TextView
        android:id="@+id/text_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/librar_selected_remind"
        android:layout_below="@id/textView_libraryName"
        android:textColor="@color/material_blue_500"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/imageView_selector_icon"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/textView_libraryName"
        android:textSize="24sp"
        android:text="@string/see"
        android:textColor="@color/lightblue"
        />
</RelativeLayout>
</tzy.qrecitewords.widget.CheckableLibraryItem>